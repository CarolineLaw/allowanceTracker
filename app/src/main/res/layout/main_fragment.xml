<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <TextView
        android:id="@+id/allowance_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/allowance_title"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toStartOf="@id/allowance_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <TextView
        android:id="@+id/allowance_value"
        android:layout_width="wrap_content"
        android:text="$400"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/allowance_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/allowance_title"
        app:layout_constraintBottom_toBottomOf="@id/allowance_title" />

    <ListView
        android:id="@+id/purchases_list_view"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintBottom_toTopOf="@+id/add_purchase_button"
        app:layout_constraintTop_toBottomOf="@+id/allowance_title" />

    <Button
        android:id="@+id/add_purchase_button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@id/purchases_list_view"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>